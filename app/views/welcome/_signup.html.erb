
<!-- Modal -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Manx</h2>
      </div>
      <div class="modal-body">
        <h2 class="sign-in-modal"> Sign In</h2>
        <%= form_for :user, {url: "/auths", method: "post", :html => {:class => "sign-in-form"}} do |u| %>
        <%= u.label :username %> </br>
        <%= u.text_field :username %><br />
        <%= u.label :email %> </br>
        <%= u.text_field :email %><br />
        <%= u.label :password %> </br>
        <%= u.password_field :password %><br /><br />
        <%= u.submit "Log in" %>
        <%end%>

      </div>
      <div class="modal-footer">
        <p class="sign-in-up" id="sign-in"> <span id= "not-user">Not a User?</span> <%= link_to 'Sign Up', new_user_path %></p>
    <!--     <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>  -->
      </div>
    </div>
  </div>
</div>









