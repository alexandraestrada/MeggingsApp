<!DOCTYPE html>
<html>
<head>
  <title>Meggings2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header id="header">

		<%if current_user %>
			<p class="navbar-text navbar-right"> 
				<%= link_to 'Sign Out', auths_path, method: :delete, class: "navbar-link" %>
			</p>
			<p class="navbar-text navbar-right">
		 		<%= current_user ? "Hello "+ current_user.username.capitalize + "!": "" %>
			</p>
			
				
		<%else %>
		
			<p class="navbar-text navbar-right"> <%= link_to 'Sign in  | Sign Up',"#", class: "navbar-link", 'data-toggle' =>"modal", 'data-target'=>"#signup" %></p>
			<!-- <p class="navbar-text navbar-right"> <%#= link_to 'Sign In', new_auth_path, class: "navbar-link" %></p> -->
			<!-- <p class="sign-in-up" id="sign-in"><%= link_to 'Sign Up', new_user_path %><p> -->
		<%end%>

		

		<%= link_to "Manx", root_path, :id => "logo" %><br /><br />
		 <%#= current_user ? current_user.username : "(not logged in)" %>

		<!-- <h3 id="logo2"> Men's Fashion Redefined.</h3> -->


	</header>
	<br /> <br />
	
<%= yield %>



<%=render partial:'welcome/signup' %>


</body>
</html>
