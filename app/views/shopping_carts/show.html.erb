<table class="table shopping-cart-table">

 <%=flash[notice]%>

<% @shopping_cart.meggings.each do |m| %>
  <tr class="shopping-cart-results">
    <td id="scphoto"><%= image_tag m.photo_url, size: '200x300', class: "image-center" %></td>
    <td class="scresults"><%= m.color %></td>

    <td class="scresults"><%= m.size %></td>
    <td class="scresults"><%= m.tightness %></td>
    <td class="scresults"><%= m.price %></td>
    

    <td id="scremove"><%= button_to "Remove", remove_megging_path(m.id), method: :post %></td>
    <td><%#= link_to "Remove Item",m, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
